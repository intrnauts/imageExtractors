# Image Extractor Configuration

# API Keys - Required for extraction functionality
FLICKR_API_KEY=your_flickr_api_key_here
IMGUR_CLIENT_ID=your_imgur_client_id_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# Service Configuration
PORT=8000
HOST=0.0.0.0

# HTTP Configuration - Connection pooling and timeouts
HTTP_MAX_CONNECTIONS=100
HTTP_TIMEOUT=30.0
HTTP_MAX_RETRIES=3

# Rate Limiting - Requests per second for each platform
RATE_LIMIT_FLICKR=0.5
RATE_LIMIT_IMGUR=1.0
RATE_LIMIT_INSTAGRAM=0.5

# Extractor Configuration - Performance tuning
EXTRACTOR_BATCH_SIZE=5
EXTRACTOR_MAX_CONCURRENT=10
EXTRACTOR_ENABLE_CACHING=true
EXTRACTOR_CACHE_TTL=300

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379